<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aslijava.new_safar"
    android:background="#4cc7a0">


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <EditText
                android:id="@+id/number_safar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="شماره سفر"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>


            <EditText
                android:id="@+id/plaque_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="پلاک اتوبوس"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"

                android:layout_marginBottom="10dp"
                android:gravity="center"/>



            <EditText
                android:id="@+id/code_melli_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"
                android:hint="کد ملی راننده"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>



            <EditText
                android:id="@+id/mabdaa"
                android:layout_width="match_parent"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"
                android:layout_height="wrap_content"
                android:hint="مبدا"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>



            <EditText
                android:id="@+id/maqsad"
                android:layout_width="match_parent"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"
                android:layout_height="wrap_content"
                android:hint="مقصد"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>



            <EditText
                android:id="@+id/qeymat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"
                android:hint=")به تومان(قیمت"
                android:inputType="number"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>



            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"
                android:inputType="date"
                android:hint="تاریخ"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>



            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ساعت"

                android:textColorHint="#fff"
                android:background="@drawable/style_edittext1"
                android:inputType="time"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>


            <Button
                android:id="@+id/save_etelaat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style"
                android:text="ثبت"/>

            <Button
                android:id="@+id/cancell_etelaat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style"
                android:text="کنسل"/>
        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>