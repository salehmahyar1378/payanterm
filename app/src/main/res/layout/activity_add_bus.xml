<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aslijava.add_bus"
    android:background="#1a868f">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="352dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editpl"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/style_edittext1"
            android:hint="پلاک"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editnumbersa"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="تعداد صندلی"

            android:background="@drawable/style_edittext1"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editemodel"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="مدل"

            android:background="@drawable/style_edittext1"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edityear"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="سال تولید"
            android:textColor="#fff"
            android:background="@drawable/style_edittext1"
            android:textColorHint="#fff"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/cancellbtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style"
            android:text="بیخیال"
            android:textSize="18dp" />

        <Button
            android:id="@+id/savebtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/style"
            android:text="ذخیره"
            android:textSize="18dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>